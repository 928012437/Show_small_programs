}
image{ 
   width: 100%;  
  height: 100%;
 }

 .copyright{
   text-align: center;
   margin-top: 20rpx;
   font-size: 12px;
   color: #aaa;
 }
 .mt40{
   margin-top: 40rpx;
 }

 .cate{
  border-bottom: 1px solid #f3f3f3;
  display: flex;
  font-size: 14px;
  background: white;
  flex-wrap: wrap;
  color: #666;
  

}
.cate-item{
  text-align: center;
  width:25%;
  margin-top:20rpx;
  padding-bottom: 20rpx;
}
  
.hover{
  /* font-weight: bold; */
  color: #2d7dee;
  border-bottom: 2px solid #2d7dee;
  padding-bottom: 20rpx;
}
.hide{
  display: none;
}
.we7-bottom-item button{
  position: absolute;
  top:0px;
  left: 40rpx;
  background: red;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.0;
  z-index: 100;
}
.we7-bottom-item navigator{
  position: absolute;
  display: block;
  top:0px;
  left: 40rpx;
  background: red;
  width: 100%;
  height: 100%;
  opacity: 0.0;
  z-index: 100;
}